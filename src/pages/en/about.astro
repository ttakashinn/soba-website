---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
---

<BaseLayout
  title="About Us"
  description="SOBA GROUP - Trusted digital transformation partner with 5+ years of experience serving 50+ businesses."
  lang="en"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-linear-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-24 overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h1 class="text-5xl lg:text-6xl font-bold mb-6">About Us</h1>
          <p class="text-2xl text-blue-100">Trusted Digital Transformation Partner</p>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-900 mb-6">Our Story</h2>
            <div class="space-y-4 text-lg text-gray-600 leading-relaxed">
              <p>
                SOBA GROUP was founded with the mission to help small and medium enterprises
                access modern technology without incurring large costs.
              </p>
              <p>
                We understand that SMEs need solutions that fit their budget,
                are easy to implement, and deliver quick ROI.
              </p>
              <p>
                With <strong class="text-blue-600">5+ years of experience</strong> and <strong class="text-blue-600">50+ successful projects</strong>,
                SOBA GROUP is proud to be a trusted partner for businesses.
              </p>
            </div>
          </div>

          <div class="relative">
            <div class="aspect-square bg-linear-to-br from-blue-100 to-blue-50 rounded-2xl p-8">
              <div class="grid grid-cols-2 gap-6 h-full">
                <div class="bg-white rounded-xl p-6 shadow-lg flex flex-col justify-center items-center">
                  <div class="text-5xl font-bold text-blue-600 mb-2">50+</div>
                  <div class="text-gray-600 text-center">Successful Projects</div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-lg flex flex-col justify-center items-center">
                  <div class="text-5xl font-bold text-blue-600 mb-2">5+</div>
                  <div class="text-gray-600 text-center">Years Experience</div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-lg flex flex-col justify-center items-center">
                  <div class="text-5xl font-bold text-blue-600 mb-2">98%</div>
                  <div class="text-gray-600 text-center">Client Satisfaction</div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-lg flex flex-col justify-center items-center">
                  <div class="text-5xl font-bold text-blue-600 mb-2">24/7</div>
                  <div class="text-gray-600 text-center">Support</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20 bg-linear-to-br from-gray-50 to-blue-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Mission & Vision</h2>
          <div class="w-24 h-1 bg-linear-to-r from-blue-600 to-blue-400 mx-auto rounded-full"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Mission -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Mission</h3>
            <p class="text-gray-600 text-lg leading-relaxed">
              Bring digital technology closer to small and medium enterprises,
              helping them compete equally in the digital age.
            </p>
          </div>

          <!-- Vision -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-shadow">
            <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Vision</h3>
            <p class="text-gray-600 text-lg leading-relaxed">
              Become the leading IT service provider for SMEs in Vietnam and the region.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Values -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Core Values</h2>
          <div class="w-24 h-1 bg-linear-to-r from-blue-600 to-blue-400 mx-auto rounded-full"></div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Value 1 -->
          <div class="group">
            <div class="bg-linear-to-br from-blue-50 to-white rounded-2xl p-8 h-full border-2 border-transparent hover:border-blue-200 transition-all">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <span class="text-2xl text-white font-bold">1</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Customer-centric</h3>
              <p class="text-gray-600 leading-relaxed">
                All decisions are made with customer benefits in mind
              </p>
            </div>
          </div>

          <!-- Value 2 -->
          <div class="group">
            <div class="bg-linear-to-br from-blue-50 to-white rounded-2xl p-8 h-full border-2 border-transparent hover:border-blue-200 transition-all">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <span class="text-2xl text-white font-bold">2</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Quality Commitment</h3>
              <p class="text-gray-600 leading-relaxed">
                No compromise on service quality
              </p>
            </div>
          </div>

          <!-- Value 3 -->
          <div class="group">
            <div class="bg-linear-to-br from-blue-50 to-white rounded-2xl p-8 h-full border-2 border-transparent hover:border-blue-200 transition-all">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <span class="text-2xl text-white font-bold">3</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Transparency</h3>
              <p class="text-gray-600 leading-relaxed">
                Clear about costs, progress, and responsibilities
              </p>
            </div>
          </div>

          <!-- Value 4 -->
          <div class="group">
            <div class="bg-linear-to-br from-blue-50 to-white rounded-2xl p-8 h-full border-2 border-transparent hover:border-blue-200 transition-all">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <span class="text-2xl text-white font-bold">4</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Innovation</h3>
              <p class="text-gray-600 leading-relaxed">
                Always updated with the latest technology and methods
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-linear-to-br from-blue-600 to-blue-900 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-6">Ready to Start Your Digital Transformation Journey?</h2>
        <p class="text-xl text-blue-100 mb-8">
          Let us be your partner in success
        </p>
        <a
          href="/en/contact"
          class="inline-block bg-white text-blue-600 px-10 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition shadow-2xl"
        >
          Contact Us Now
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>