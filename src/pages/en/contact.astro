---
import BaseLayout from '../../layouts/BaseLayout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import ContactForm from '../../components/ContactForm.astro'
// import { useTranslations } from '../../i18n/utils';

// const t = useTranslations('en');
---

<BaseLayout
  title='Contact Us'
  description='Contact SOBA GROUP for a free consultation on digital transformation solutions for your business.'
  lang='en'>
  <Header />

  <main>
    <!-- Page Header -->
    <section
      class='bg-linear-to-br from-indigo-500 to-indigo-600 text-white py-16'>
      <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
        <h1 class='text-4xl lg:text-5xl font-bold mb-4'>Contact Us</h1>
        <p class='text-xl text-white/90'>We're here to help</p>
      </div>
    </section>

    <ContactForm />
  </main>

  <Footer />
</BaseLayout>
