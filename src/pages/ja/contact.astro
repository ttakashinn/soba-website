---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContactForm from '../../components/ContactForm.astro';
// import { useTranslations } from '../../i18n/utils';

// const t = useTranslations('ja');
---

<BaseLayout
  title="お問い合わせ"
  description="SOBA GROUPにお問い合わせください。貴社のデジタル変革ソリューションについて無料でご相談いたします。"
  lang="ja"
>
  <Header />

  <main>
    <!-- Page Header -->
    <section class="bg-linear-to-br from-blue-600 to-blue-800 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">お問い合わせ</h1>
        <p class="text-xl text-blue-100">お気軽にご連絡ください</p>
      </div>
    </section>

    <ContactForm />
  </main>

  <Footer />
</BaseLayout>