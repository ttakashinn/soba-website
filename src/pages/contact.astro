---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
// import { useTranslations } from '../i18n/utils';

// const t = useTranslations('vi');
---

<BaseLayout
  title="Liên hệ"
  description="Liên hệ với SOBA GROUP để được tư vấn miễn phí về giải pháp chuyển đổi số cho doanh nghiệp."
  lang="vi"
>
  <Header />

  <main>
    <!-- Page Header -->
    <section class="bg-linear-to-br from-blue-600 to-blue-800 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">Liên hệ với chúng tôi</h1>
        <p class="text-xl text-blue-100">Chúng tôi sẵn sàng hỗ trợ bạn</p>
      </div>
    </section>

    <ContactForm />
  </main>

  <Footer />
</BaseLayout>