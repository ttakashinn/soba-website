---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="contact"
  class="py-20 bg-linear-to-br from-gray-50 to-white"
  x-data="{
    submitted: false,
    loading: false,
    errors: {},
    validateForm(form) {
      this.errors = {};
      const data = new FormData(form);

      if (!data.get('name')?.trim()) {
        this.errors.name = true;
      }

      const email = data.get('email');
      if (!email || !email.includes('@')) {
        this.errors.email = true;
      }

      const phone = data.get('phone');
      if (!phone || phone.length < 10) {
        this.errors.phone = true;
      }

      if (!data.get('message')?.trim()) {
        this.errors.message = true;
      }

      return Object.keys(this.errors).length === 0;
    },
    async handleSubmit(e) {
      if (!this.validateForm(e.target)) {
        e.preventDefault();
        return;
      }
      this.loading = true;
    }
  }"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Form -->
      <div>
        <div class="mb-8">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            {t('form.title')}
          </h2>
          <p class="text-lg text-gray-600">
            {t('form.subtitle')}
          </p>
        </div>

        <form
          name={`contact-${lang}`}
          method="POST"
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          action={`/thank-you?lang=${lang}`}
          @submit="handleSubmit"
          class="space-y-6"
          x-show="!submitted"
        >
          <!-- Netlify form detection -->
          <input type="hidden" name="form-name" value={`contact-${lang}`} />
          <input type="hidden" name="language" value={lang} />

          <!-- Honeypot -->
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>

          <!-- Name -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.name')} <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              :class="{ 'border-red-500': errors.name }"
              placeholder={t('form.name')}
            />
          </div>

          <!-- Email -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.email')} <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              :class="{ 'border-red-500': errors.email }"
              placeholder={t('form.email')}
            />
          </div>

          <!-- Phone -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.phone')} <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              name="phone"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              :class="{ 'border-red-500': errors.phone }"
              placeholder={t('form.phone')}
            />
          </div>

          <!-- Company -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.company')}
            </label>
            <input
              type="text"
              name="company"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder={t('form.company')}
            />
          </div>

          <!-- Service -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.service')}
            </label>
            <select
              name="service"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
            >
              <option value="">-- {t('form.service')} --</option>
              <option value="digital-transformation">{t('services.digital.title')}</option>
              <option value="outsourcing">{t('services.outsourcing.title')}</option>
              <option value="bpo">{t('services.bpo.title')}</option>
              <option value="other">
                {lang === 'vi' && 'Khác'}
                {lang === 'en' && 'Other'}
                {lang === 'ja' && 'その他'}
              </option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              {t('form.message')} <span class="text-red-500">*</span>
            </label>
            <textarea
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition resize-none"
              :class="{ 'border-red-500': errors.message }"
              placeholder={t('form.message')}
            ></textarea>
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-4 rounded-lg font-semibold hover:bg-blue-700 transition shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed"
            :disabled="loading"
          >
            <span x-show="!loading">{t('form.submit')}</span>
            <span x-show="loading" class="flex items-center justify-center" style="display: none;">
              <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              {t('form.sending')}
            </span>
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="lg:pl-12">
        <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-10">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            {t('footer.contact')}
          </h3>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="shrink-0">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-semibold text-gray-900 mb-1">{t('footer.address')}</p>
                <p class="text-gray-600">
                  {lang === 'vi' && '[Địa chỉ công ty]'}
                  {lang === 'en' && '[Company address]'}
                  {lang === 'ja' && '[会社のオフィス住所]'}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="shrink-0">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-semibold text-gray-900 mb-1">{t('footer.phone')}</p>
                <p class="text-gray-600">
                  {lang === 'vi' && '[Số điện thoại]'}
                  {lang === 'en' && '[Phone number]'}
                  {lang === 'ja' && '[電話番号]'}
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="shrink-0">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-semibold text-gray-900 mb-1">{t('footer.email')}</p>
                <p class="text-gray-600">contact@sobagroup.com</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="shrink-0">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-semibold text-gray-900 mb-1">{t('footer.hours')}</p>
                <p class="text-gray-600">{t('footer.hours.value')}</p>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="font-semibold text-gray-900 mb-4">
              {lang === 'vi' && 'Kết nối với chúng tôi'}
              {lang === 'en' && 'Connect with us'}
              {lang === 'ja' && 'フォローする'}
            </p>
            <div class="flex space-x-4">
              <a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center text-gray-600 hover:bg-blue-600 hover:text-white transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center text-gray-600 hover:bg-blue-600 hover:text-white transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>