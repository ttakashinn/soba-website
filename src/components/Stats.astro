---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-linear-to-br from-blue-50 to-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Stat 1 -->
      <div class="text-center">
        <div class="flex items-center justify-center mb-3">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="text-4xl lg:text-5xl font-bold text-gray-900 mb-2">50+</div>
        <div class="text-gray-600 font-medium">{t('stats.projects')}</div>
      </div>

      <!-- Stat 2 -->
      <div class="text-center">
        <div class="flex items-center justify-center mb-3">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="text-4xl lg:text-5xl font-bold text-gray-900 mb-2">5+</div>
        <div class="text-gray-600 font-medium">{t('stats.years')}</div>
      </div>

      <!-- Stat 3 -->
      <div class="text-center">
        <div class="flex items-center justify-center mb-3">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="text-4xl lg:text-5xl font-bold text-gray-900 mb-2">98%</div>
        <div class="text-gray-600 font-medium">{t('stats.satisfaction')}</div>
      </div>

      <!-- Stat 4 -->
      <div class="text-center">
        <div class="flex items-center justify-center mb-3">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
        <div class="text-4xl lg:text-5xl font-bold text-gray-900 mb-2">24/7</div>
        <div class="text-gray-600 font-medium">{t('stats.support')}</div>
      </div>
    </div>
  </div>
</section>