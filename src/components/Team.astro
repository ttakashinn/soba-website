---

<section class="py-20 bg-linear-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentTeam.title}</h2>
      <p class="text-xl text-gray-600">{currentTeam.subtitle}</p>
      <div class="w-24 h-1 bg-linear-to-r from-blue-600 to-blue-400 mx-auto rounded-full mt-6"></div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {currentTeam.members.map((member) => (
        <div class="group">
          <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 h-full flex flex-col">
            <!-- Avatar -->
            <div class="relative mb-6 flex justify-center">
              <div class={`w-24 h-24 bg-linear-to-br ${colorClasses[member.color]} rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                {member.avatar}
              </div>
            </div>

            <!-- Info -->
            <div class="text-center flex-1 flex flex-col">
              <h3 class="text-xl font-bold text-gray-900 mb-1">{member.name}</h3>
              <p class="text-blue-600 font-medium mb-4">{member.role}</p>
              <p class="text-gray-600 text-sm leading-relaxed flex-1">{member.bio}</p>

              <!-- LinkedIn icon -->
              <div class="mt-6 flex justify-center">
                <a
                  href="#"
                  class="w-10 h-10 bg-gray-100 hover:bg-blue-600 rounded-full flex items-center justify-center text-gray-400 hover:text-white transition-all duration-300"
                  aria-label={`${member.name} LinkedIn`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
