---
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class='py-16 sm:py-20 lg:py-24 bg-white'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <!-- Section Header -->
    <div class='text-center mb-12 sm:mb-16'>
      <h2
        class='text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-slate-800 mb-4'>
        {t('why.title')}
      </h2>
      <div
        class='w-20 h-1 bg-linear-to-r from-indigo-500 to-violet-400 mx-auto rounded-full'
      ></div>
    </div>

    <!-- Features Grid -->
    <div class='grid sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8'>
      <!-- Feature 1 -->
      <div
        class='group text-center p-6 sm:p-8 rounded-2xl bg-slate-50/50 hover:bg-white border border-transparent hover:border-slate-100 transition-all duration-300 hover:shadow-elegant'>
        <div
          class='inline-flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-indigo-100 text-indigo-600 rounded-xl mb-5 sm:mb-6 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg group-hover:shadow-indigo-500/25'>
          <svg
            class='w-7 h-7 sm:w-8 sm:h-8'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
            ></path>
          </svg>
        </div>
        <h3 class='text-lg sm:text-xl font-bold text-slate-800 mb-2 sm:mb-3'>
          {t('why.understand.title')}
        </h3>
        <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
          {t('why.understand.desc')}
        </p>
      </div>

      <!-- Feature 2 -->
      <div
        class='group text-center p-6 sm:p-8 rounded-2xl bg-slate-50/50 hover:bg-white border border-transparent hover:border-slate-100 transition-all duration-300 hover:shadow-elegant'>
        <div
          class='inline-flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-violet-100 text-violet-600 rounded-xl mb-5 sm:mb-6 group-hover:bg-violet-600 group-hover:text-white transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg group-hover:shadow-violet-500/25'>
          <svg
            class='w-7 h-7 sm:w-8 sm:h-8'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
            ></path>
          </svg>
        </div>
        <h3 class='text-lg sm:text-xl font-bold text-slate-800 mb-2 sm:mb-3'>
          {t('why.solution.title')}
        </h3>
        <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
          {t('why.solution.desc')}
        </p>
      </div>

      <!-- Feature 3 -->
      <div
        class='group text-center p-6 sm:p-8 rounded-2xl bg-slate-50/50 hover:bg-white border border-transparent hover:border-slate-100 transition-all duration-300 hover:shadow-elegant'>
        <div
          class='inline-flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-emerald-100 text-emerald-600 rounded-xl mb-5 sm:mb-6 group-hover:bg-emerald-600 group-hover:text-white transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg group-hover:shadow-emerald-500/25'>
          <svg
            class='w-7 h-7 sm:w-8 sm:h-8'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'
            ></path>
          </svg>
        </div>
        <h3 class='text-lg sm:text-xl font-bold text-slate-800 mb-2 sm:mb-3'>
          {t('why.team.title')}
        </h3>
        <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
          {t('why.team.desc')}
        </p>
      </div>

      <!-- Feature 4 -->
      <div
        class='group text-center p-6 sm:p-8 rounded-2xl bg-slate-50/50 hover:bg-white border border-transparent hover:border-slate-100 transition-all duration-300 hover:shadow-elegant'>
        <div
          class='inline-flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-amber-100 text-amber-600 rounded-xl mb-5 sm:mb-6 group-hover:bg-amber-600 group-hover:text-white transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg group-hover:shadow-amber-500/25'>
          <svg
            class='w-7 h-7 sm:w-8 sm:h-8'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
            ></path>
          </svg>
        </div>
        <h3 class='text-lg sm:text-xl font-bold text-slate-800 mb-2 sm:mb-3'>
          {t('why.commitment.title')}
        </h3>
        <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
          {t('why.commitment.desc')}
        </p>
      </div>
    </div>
  </div>
</section>
