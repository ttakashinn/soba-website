---
import { getLangFromUrl, useTranslations } from '../i18n/utils'

interface Props {
  title: string
  description: string
  icon: string
  href: string
}

const { title, description, icon, href } = Astro.props
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<a
  href={href}
  class='group block bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 p-8 border border-slate-200 hover:border-indigo-300'>
  <div class='flex flex-col h-full'>
    <!-- Icon -->
    <div class='mb-6'>
      <div
        class='w-16 h-16 bg-gradient-to-br from-indigo-500 to-violet-500 rounded-lg flex items-center justify-center text-3xl shadow-sm group-hover:shadow-md transition-all'>
        {icon}
      </div>
    </div>

    <!-- Content -->
    <h3
      <h3
      class='text-2xl font-bold text-gray-900 mb-4 group-hover:text-indigo-600 transition'>
      {title}
    </h3>
    <p class='text-gray-600 leading-relaxed mb-6 grow'>
      {description}
    </p>

    <!-- Arrow -->
    <div
      class='flex items-center text-indigo-600 font-semibold group-hover:translate-x-2 transition-transform'>
      <span class='mr-2'>{t('services.learn.more')}</span>
      <svg
        class='w-5 h-5'
        fill='none'
        stroke='currentColor'
        viewBox='0 0 24 24'>
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
      </svg>
    </div>
  </div>
</a>
