---
import { getLangFromUrl, useTranslations } from '../i18n/utils'

interface Props {
  title: string
  description: string
  icon: string
  href: string
}

const { title, description, icon, href } = Astro.props
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<a
  href={href}
  class='group block bg-white rounded-2xl p-6 sm:p-8 border border-slate-100 hover:border-indigo-200 transition-all duration-300 card-hover shadow-elegant hover:shadow-elegant-lg'>
  <div class='flex flex-col h-full'>
    <!-- Icon -->
    <div class='mb-5'>
      <div class='w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-indigo-500 to-violet-500 rounded-xl flex items-center justify-center text-2xl sm:text-3xl shadow-lg shadow-indigo-500/20 group-hover:scale-105 transition-transform'>
        {icon}
      </div>
    </div>

    <!-- Content -->
    <h3 class='text-xl sm:text-2xl font-bold text-slate-800 mb-3 group-hover:text-indigo-600 transition-colors'>
      {title}
    </h3>
    <p class='text-slate-600 leading-relaxed mb-6 grow text-sm sm:text-base'>
      {description}
    </p>

    <!-- Arrow -->
    <div class='flex items-center text-indigo-600 font-medium group-hover:translate-x-2 transition-transform'>
      <span class='mr-2 text-sm sm:text-base'>{t('services.learn.more')}</span>
      <svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
      </svg>
    </div>
  </div>
</a>
