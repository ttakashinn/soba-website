---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t('process.title')}
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-blue-400 mx-auto rounded-full"></div>
    </div>

    <!-- Timeline -->
    <div class="relative">
      <!-- Vertical line (desktop) -->
      <div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-blue-600 via-blue-500 to-blue-400"></div>

      <!-- Steps -->
      <div class="space-y-12">
        <!-- Step 1 -->
        <div class="relative flex items-center lg:flex-row">
          <div class="w-full lg:w-5/12 lg:text-right lg:pr-12">
            <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="inline-block text-5xl font-bold text-blue-600 mb-4 lg:float-right lg:ml-4">
                01
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3 clear-both">
                {t('process.step1.title')}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {t('process.step1.desc')}
              </p>
            </div>
          </div>
          <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 rounded-full items-center justify-center shadow-lg z-10">
            <div class="w-6 h-6 bg-white rounded-full"></div>
          </div>
          <div class="hidden lg:block w-5/12"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative flex items-center lg:flex-row-reverse">
          <div class="w-full lg:w-5/12 lg:text-left lg:pl-12">
            <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="inline-block text-5xl font-bold text-blue-600 mb-4 lg:float-left lg:mr-4">
                02
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3 clear-both">
                {t('process.step2.title')}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {t('process.step2.desc')}
              </p>
            </div>
          </div>
          <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 rounded-full items-center justify-center shadow-lg z-10">
            <div class="w-6 h-6 bg-white rounded-full"></div>
          </div>
          <div class="hidden lg:block w-5/12"></div>
        </div>

        <!-- Step 3 -->
        <div class="relative flex items-center lg:flex-row">
          <div class="w-full lg:w-5/12 lg:text-right lg:pr-12">
            <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="inline-block text-5xl font-bold text-blue-600 mb-4 lg:float-right lg:ml-4">
                03
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3 clear-both">
                {t('process.step3.title')}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {t('process.step3.desc')}
              </p>
            </div>
          </div>
          <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 rounded-full items-center justify-center shadow-lg z-10">
            <div class="w-6 h-6 bg-white rounded-full"></div>
          </div>
          <div class="hidden lg:block w-5/12"></div>
        </div>

        <!-- Step 4 -->
        <div class="relative flex items-center lg:flex-row-reverse">
          <div class="w-full lg:w-5/12 lg:text-left lg:pl-12">
            <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="inline-block text-5xl font-bold text-blue-600 mb-4 lg:float-left lg:mr-4">
                04
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3 clear-both">
                {t('process.step4.title')}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {t('process.step4.desc')}
              </p>
            </div>
          </div>
          <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 rounded-full items-center justify-center shadow-lg z-10">
            <div class="w-6 h-6 bg-white rounded-full"></div>
          </div>
          <div class="hidden lg:block w-5/12"></div>
        </div>

        <!-- Step 5 -->
        <div class="relative flex items-center lg:flex-row">
          <div class="w-full lg:w-5/12 lg:text-right lg:pr-12">
            <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="inline-block text-5xl font-bold text-blue-600 mb-4 lg:float-right lg:ml-4">
                05
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3 clear-both">
                {t('process.step5.title')}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {t('process.step5.desc')}
              </p>
            </div>
          </div>
          <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 rounded-full items-center justify-center shadow-lg z-10">
            <div class="w-6 h-6 bg-white rounded-full"></div>
          </div>
          <div class="hidden lg:block w-5/12"></div>
        </div>
      </div>
    </div>
  </div>
</section>