---
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section
  class='py-12 sm:py-14 lg:py-16 bg-linear-to-br from-slate-50 to-indigo-50/30'>
  <div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
    <!-- Section Header -->
    <div class='text-center mb-8 sm:mb-10'>
      <h2
        class='text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-slate-800 mb-4'>
        {t('process.title')}
      </h2>
      <div
        class='w-20 h-1 bg-linear-to-r from-indigo-500 to-violet-400 mx-auto rounded-full'
      ></div>
    </div>

    <!-- Timeline -->
    <div class='relative'>
      <!-- Vertical line (desktop) -->
      <div
        class='hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-linear-to-b from-indigo-300 via-violet-300 to-indigo-300'
      ></div>

      <!-- Steps -->
      <div class='space-y-5 sm:space-y-6 lg:space-y-8'>
        <!-- Step 1 -->
        <div class='relative flex items-center lg:flex-row'>
          <div class='w-full lg:w-5/12 lg:text-right lg:pr-8'>
            <div
              class='bg-white rounded-xl shadow-sm p-4 sm:p-5 hover:shadow-md transition-all duration-300 border border-slate-100'>
              <div
                class='inline-block text-2xl sm:text-3xl lg:text-4xl font-bold text-indigo-600/20 mb-2 lg:float-right lg:ml-3'>
                01
              </div>
              <h3
                class='text-base sm:text-lg lg:text-xl font-bold text-slate-800 mb-1.5 sm:mb-2 clear-both'>
                {t('process.step1.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-xs sm:text-sm'>
                {t('process.step1.desc')}
              </p>
            </div>
          </div>
          <div
            class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-8 h-8 lg:w-10 lg:h-10 bg-linear-to-br from-indigo-500 to-violet-500 rounded-full items-center justify-center shadow-lg shadow-indigo-500/30 z-10'>
            <div class='w-3 h-3 lg:w-4 lg:h-4 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 2 -->
        <div class='relative flex items-center lg:flex-row-reverse'>
          <div class='w-full lg:w-5/12 lg:text-left lg:pl-8'>
            <div
              class='bg-white rounded-xl shadow-sm p-4 sm:p-5 hover:shadow-md transition-all duration-300 border border-slate-100'>
              <div
                class='inline-block text-2xl sm:text-3xl lg:text-4xl font-bold text-violet-600/20 mb-2 lg:float-left lg:mr-3'>
                02
              </div>
              <h3
                class='text-base sm:text-lg lg:text-xl font-bold text-slate-800 mb-1.5 sm:mb-2 clear-both'>
                {t('process.step2.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-xs sm:text-sm'>
                {t('process.step2.desc')}
              </p>
            </div>
          </div>
          <div
            class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-8 h-8 lg:w-10 lg:h-10 bg-linear-to-br from-violet-500 to-indigo-500 rounded-full items-center justify-center shadow-lg shadow-violet-500/30 z-10'>
            <div class='w-3 h-3 lg:w-4 lg:h-4 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 3 -->
        <div class='relative flex items-center lg:flex-row'>
          <div class='w-full lg:w-5/12 lg:text-right lg:pr-8'>
            <div
              class='bg-white rounded-xl shadow-sm p-4 sm:p-5 hover:shadow-md transition-all duration-300 border border-slate-100'>
              <div
                class='inline-block text-2xl sm:text-3xl lg:text-4xl font-bold text-indigo-600/20 mb-2 lg:float-right lg:ml-3'>
                03
              </div>
              <h3
                class='text-base sm:text-lg lg:text-xl font-bold text-slate-800 mb-1.5 sm:mb-2 clear-both'>
                {t('process.step3.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-xs sm:text-sm'>
                {t('process.step3.desc')}
              </p>
            </div>
          </div>
          <div
            class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-8 h-8 lg:w-10 lg:h-10 bg-linear-to-br from-indigo-500 to-violet-500 rounded-full items-center justify-center shadow-lg shadow-indigo-500/30 z-10'>
            <div class='w-3 h-3 lg:w-4 lg:h-4 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 4 -->
        <div class='relative flex items-center lg:flex-row-reverse'>
          <div class='w-full lg:w-5/12 lg:text-left lg:pl-8'>
            <div
              class='bg-white rounded-xl shadow-sm p-4 sm:p-5 hover:shadow-md transition-all duration-300 border border-slate-100'>
              <div
                class='inline-block text-2xl sm:text-3xl lg:text-4xl font-bold text-violet-600/20 mb-2 lg:float-left lg:mr-3'>
                04
              </div>
              <h3
                class='text-base sm:text-lg lg:text-xl font-bold text-slate-800 mb-1.5 sm:mb-2 clear-both'>
                {t('process.step4.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-xs sm:text-sm'>
                {t('process.step4.desc')}
              </p>
            </div>
          </div>
          <div
            class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-8 h-8 lg:w-10 lg:h-10 bg-linear-to-br from-violet-500 to-indigo-500 rounded-full items-center justify-center shadow-lg shadow-violet-500/30 z-10'>
            <div class='w-3 h-3 lg:w-4 lg:h-4 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 5 -->
        <div class='relative flex items-center lg:flex-row'>
          <div class='w-full lg:w-5/12 lg:text-right lg:pr-8'>
            <div
              class='bg-white rounded-xl shadow-sm p-4 sm:p-5 hover:shadow-md transition-all duration-300 border border-slate-100'>
              <div
                class='inline-block text-2xl sm:text-3xl lg:text-4xl font-bold text-indigo-600/20 mb-2 lg:float-right lg:ml-3'>
                05
              </div>
              <h3
                class='text-base sm:text-lg lg:text-xl font-bold text-slate-800 mb-1.5 sm:mb-2 clear-both'>
                {t('process.step5.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-xs sm:text-sm'>
                {t('process.step5.desc')}
              </p>
            </div>
          </div>
          <div
            class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-8 h-8 lg:w-10 lg:h-10 bg-linear-to-br from-indigo-500 to-violet-500 rounded-full items-center justify-center shadow-lg shadow-indigo-500/30 z-10'>
            <div class='w-3 h-3 lg:w-4 lg:h-4 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>
      </div>
    </div>
  </div>
</section>
