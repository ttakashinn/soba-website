---
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class='py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-slate-50 to-indigo-50/30'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <!-- Section Header -->
    <div class='text-center mb-12 sm:mb-16'>
      <h2 class='text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-slate-800 mb-4'>
        {t('process.title')}
      </h2>
      <div class='w-20 h-1 bg-gradient-to-r from-indigo-500 to-violet-400 mx-auto rounded-full'></div>
    </div>

    <!-- Timeline -->
    <div class='relative'>
      <!-- Vertical line (desktop) -->
      <div class='hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-indigo-300 via-violet-300 to-indigo-300'></div>

      <!-- Steps -->
      <div class='space-y-8 sm:space-y-10 lg:space-y-12'>
        <!-- Step 1 -->
        <div class='relative flex items-center lg:flex-row'>
          <div class='w-full lg:w-5/12 lg:text-right lg:pr-12'>
            <div class='bg-white rounded-2xl shadow-elegant p-6 sm:p-8 hover:shadow-elegant-lg transition-all duration-300 transform hover:-translate-y-1 border border-slate-100'>
              <div class='inline-block text-3xl sm:text-4xl lg:text-5xl font-bold text-indigo-600/20 mb-3 lg:float-right lg:ml-4'>
                01
              </div>
              <h3 class='text-lg sm:text-xl lg:text-2xl font-bold text-slate-800 mb-2 sm:mb-3 clear-both'>
                {t('process.step1.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
                {t('process.step1.desc')}
              </p>
            </div>
          </div>
          <div class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-indigo-500 to-violet-500 rounded-full items-center justify-center shadow-lg shadow-indigo-500/30 z-10'>
            <div class='w-4 h-4 lg:w-5 lg:h-5 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 2 -->
        <div class='relative flex items-center lg:flex-row-reverse'>
          <div class='w-full lg:w-5/12 lg:text-left lg:pl-12'>
            <div class='bg-white rounded-2xl shadow-elegant p-6 sm:p-8 hover:shadow-elegant-lg transition-all duration-300 transform hover:-translate-y-1 border border-slate-100'>
              <div class='inline-block text-3xl sm:text-4xl lg:text-5xl font-bold text-violet-600/20 mb-3 lg:float-left lg:mr-4'>
                02
              </div>
              <h3 class='text-lg sm:text-xl lg:text-2xl font-bold text-slate-800 mb-2 sm:mb-3 clear-both'>
                {t('process.step2.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
                {t('process.step2.desc')}
              </p>
            </div>
          </div>
          <div class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-violet-500 to-indigo-500 rounded-full items-center justify-center shadow-lg shadow-violet-500/30 z-10'>
            <div class='w-4 h-4 lg:w-5 lg:h-5 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 3 -->
        <div class='relative flex items-center lg:flex-row'>
          <div class='w-full lg:w-5/12 lg:text-right lg:pr-12'>
            <div class='bg-white rounded-2xl shadow-elegant p-6 sm:p-8 hover:shadow-elegant-lg transition-all duration-300 transform hover:-translate-y-1 border border-slate-100'>
              <div class='inline-block text-3xl sm:text-4xl lg:text-5xl font-bold text-indigo-600/20 mb-3 lg:float-right lg:ml-4'>
                03
              </div>
              <h3 class='text-lg sm:text-xl lg:text-2xl font-bold text-slate-800 mb-2 sm:mb-3 clear-both'>
                {t('process.step3.title')}
              </h3>
              <p class='text-slate-600 leading-relaxed text-sm sm:text-base'>
                {t('process.step3.desc')}
              </p>
            </div>
          </div>
          <div class='hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-indigo-500 to-violet-500 rounded-full items-center justify-center shadow-lg shadow-indigo-500/30 z-10'>
            <div class='w-4 h-4 lg:w-5 lg:h-5 bg-white rounded-full'></div>
          </div>
          <div class='hidden lg:block w-5/12'></div>
        </div>

        <!-- Step 4 -->
        <div class='relative flex items-center lg:flex-row-reverse'>
          <div class='w-full lg:w-5/12 lg:text-left lg:pl-12'>
            <div class='bg-white rounded-2xl shadow-elegant p-6 sm:p-8 hover:shadow-elegant-lg transition-all duration-300 transform hover:-translate-y-1 border border-slate-100'>
